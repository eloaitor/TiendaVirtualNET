@model TiendaVirtual.Entidades.Factura

@{
    ViewBag.Title = "Factura";
}

<section id="factura" class="row">
    <h2>Contenido de la factura de @(Model?.Usuario?.Nick)</h2>
    <h3>@(Model?.Usuario?.Nick)</h3>
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Artículo</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LineasFactura)
            {
                <tr>
                    <td>
                        <img alt="" class="thumbnail" height="30" width="40" src="~/fotos/@(item.Producto.Id).png" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Precio)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <th>Base Imponible</th>
                <th>@Html.DisplayFor(model => model.ImporteSinIva)</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <th>IVA</th>
                <th>@Html.DisplayFor(model => model.Iva)</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <th>Total</th>
                <td>@Html.DisplayFor(model => model.Total)</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <button class="btn btn-primary" id="btnFinalizarCompra">Finalizar compra</button>
                </td>
            </tr>
        </tfoot>
    </table>
</section>

