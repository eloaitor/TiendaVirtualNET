@model TiendaVirtual.Entidades.Carrito

@{
    ViewBag.Title = "Index";
}

<section id="carrito" class="row">
    <h2>Contenido del carrito de @(Model?.Usuario?.Nick)</h2>
    <h3>@(Model?.Usuario?.Nick)</h3>
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Artículo</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LineasFactura)
            {
            <tr>
                <td>
                    <img alt="" class="thumbnail" height="30" width="40" src="~/fotos/@(item.Producto.Id).png" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <th>Total</th>
                <td>@Html.DisplayFor(model => model.Total)</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a href="@Url.Action("Index", "Factura")" class="btn btn-primary">Factura</a>
                </td>
            </tr>
        </tfoot>
    </table>
</section>
