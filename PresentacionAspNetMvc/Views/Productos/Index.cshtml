@model IEnumerable<TiendaVirtual.Entidades.IProducto>

@{
    ViewBag.Title = "PRODUCTOS";
}


<section id="index" class="row text-center">
    <h2>Listado de productos</h2>
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img alt="" class="thumbnail" height="150" width="200" src="~/fotos/@(item.Id).png">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Precio)</p>
                    <p>@Html.ActionLink("Añadir al carrito", "Ficha", 
                      new { id = item.Id }, new { @class="btn btn-primary", role="button" })</p>
                </div>
            </div>
        </div>
    }
    </section>