@model IEnumerable<TiendaVirtual.Entidades.IUsuario>

@{
    ViewBag.Title = "index";
}

<section id="usuarios" class="row">
    <h3>Listado Usuarios</h3>
    @Html.ActionLink("Anadir Usuario", "AnadirUsuario", new { @class = "btn btn-danger", role = "button" })
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nick</th>
                <th>Password</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nick)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.ActionLink("Modificar", "UsuarioEditar",
                      new { id = item.Id }, new { @class = "btn btn-primary", role = "button" })

                        @Html.ActionLink("Eliminar", "EliminarUsuario",
                      new { id = item.Id }, new { @class = "btn btn-danger", role = "button" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>